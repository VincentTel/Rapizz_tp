<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="ManagePizza_BorderPane" prefHeight="351.0" prefWidth="577.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.RaPizz.controleur.ManagePizzaControleur">
   <left>
      <VBox prefHeight="384.0" prefWidth="195.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="AddPhoto_ImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></ImageView>
            <TextField fx:id="Designation_TextField" promptText="Designation" />
            <TextField fx:id="Prix_TextField" promptText="Prix" />
            <HBox prefHeight="100.0" prefWidth="200.0" />
            <ListView fx:id="Ingredrients_ListView" prefHeight="755.0" prefWidth="200.0"/>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="Add_Button" mnemonicParsing="false" text="Ajouter" />
                  <Button fx:id="Update_Button" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Update" />
                  <Button fx:id="Cancel_Button" alignment="CENTER" contentDisplay="CENTER" layoutX="65.0" layoutY="10.0" mnemonicParsing="false" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </left>
   <center>
      <TableView fx:id="Pizza_TableView" prefHeight="390.0" prefWidth="387.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="Photo_TableColumn" prefWidth="75.0" text="Photo" />
          <TableColumn fx:id="Designation_TableColumn" prefWidth="75.0" text="Designation" />
            <TableColumn fx:id="Prix_TableColumn" prefWidth="75.0" text="Prix" />
            <TableColumn fx:id="Ingredients_TableColumn" prefWidth="75.0" text="Ingredients" />
            <TableColumn fx:id="Action_TableColumn" prefWidth="75.0" resizable="false" text="Action" />            
            <TableColumn fx:id="ActionUpdate_TableColumn" prefWidth="75.0" resizable="false" text="Action" />
        </columns> 
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
